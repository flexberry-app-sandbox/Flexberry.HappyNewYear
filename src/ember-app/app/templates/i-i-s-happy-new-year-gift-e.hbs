<h3 class="ui header">{{t "forms.i-i-s-happy-new-year-gift-e.caption"}}{{#if readonly}} ({{t "forms.edit-form.readonly"}}){{/if}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    {{flexberry-edit-panel
      showCloseButton=true
      deepMount=true
      readonly=readonly
      buttons=(array
        (hash
          type="submit"
          class="save-button"
          disabled=(readonly)
          text=(t "forms.edit-form.save-button-text")
          icon="icon icon-save"
          action="save")
        (hash
          type="submit"
          class="save-close-button"
          disabled=(readonly)
          text=(t "forms.edit-form.saveAndClose-button-text")
          icon="icon icon-save-close"
          action="saveAndClose"
        ))
    }}
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-happy-new-year-gift-e.date-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.date
      class=(if (v-get validationModel "date" "isInvalid") "error")
      data-test-i-i-s-happy-new-year-gift-e-date=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "date" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationModel "name" "isInvalid") "error")
      label=(t "forms.i-i-s-happy-new-year-gift-e.name-caption")
      data-test-i-i-s-happy-new-year-gift-e-name=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "name" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-happy-new-year-gift-e.giftType-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.giftType
      displayAttributeName="name"
      autocomplete=true
      relationName="giftType"
      projection="GiftTypeL"
      title=(t "forms.i-i-s-happy-new-year-gift-e.giftType-caption")
      readonly=readonly
      componentName="giftTypeLookup"
      updateLookupValue=(action "updateLookupValue")
      class=(if (v-get validationModel "giftType" "isInvalid") "error")
      data-test-i-i-s-happy-new-year-gift-e-giftType=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "giftType" "message")}}
  </div>

</form>
